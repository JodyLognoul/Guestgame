<!doctype html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>{% block title %}Guestgame - On joue aussi près de chez vous !{% endblock %}</title>
        {% block css %}        
            <link rel="stylesheet" href="{{ asset('public/css/site.css') }}" type="text/css" media="screen" />                   
            <link rel="stylesheet" href="{{ asset('public/css/bootstrap-1.1.1.min.css') }}" type="text/css" media="screen" />   
            <link rel="stylesheet" href="{{ asset('public/css/ui/jquery.timepicker.css') }}" type="text/css" media="screen" />           
            <link rel="stylesheet" href="{{ asset('public/css/ui/jquery.ui.all.css') }}" type="text/css" media="screen" />           
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="header-nav-bg">
            <div id="header-nav">                      
                <a href="{{ path('homepage') }}"><img src="{{ asset('public/images/logo.png') }}"/>
                <h1 id="header-titles">Guest<span style="color:#ff7b00;">g</span>ame</h1>
                <span id="slogan">On joue aussi près de chez vous !</span></a>
            </div>
        </div>
        <div id="main-container">
            <div id="container">
                {% block body %} {% endblock %}
            </div>
            <div id="sidebar">
                <div id="sideblock-picture" class="bloc sidebar">
                    {% block sideblockpicture %}
                        <h5>Pictures</h5>
                    {% endblock %}
                </div>
                <div id="sideblock-parties" class="bloc sidebar">
                    {% block sideblockparties %}
                        <h5>
                        Dernières parties
                        </h5>
                    {% endblock %}
                </div>
                <div id="sideblock-comment" class="bloc sidebar">
                    {% block sideblockcomment %}
                        <h5>
                        Derniers commentaires
                        </h5>
                    {% endblock %}
                </div>
            </div>            
        </div>
        <div id="footer-main">        
            {{ knp_menu('main') }}            
            <p id="member-count">
            150.987.345 membres
            </p>
            <img src="{{ asset('public/images/logo.png') }}"/> 
        </div>
        <script src="http://maps.google.com/maps/api/js?sensor=false"></script>
        <script type="text/javascript" src="{{ asset('public/js/jquery-1.4.4.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('public/js/jquery-ui-1.8.7.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('public/js/jquery-ui-timepicker-addon.js') }}"></script>
        <script type="text/javascript" src="{{ asset('public/js/jquery.ui.addresspicker.js') }}"></script>
        <script type="text/javascript" src="{{ asset('public/js/jquery.guestgame.js') }}"></script>
        <script type="text/javascript" src="{{ asset('public/js/jquery.dataTables.min.js') }}"></script>
        {% block script %}             
            <script type="text/javascript">
                $('.datepicker').datetimepicker({
                    stepMinute: 10,
                    currentText: 'Maintenant !',
                });
            </script>
            <script>
              $(document).ready(function() {
              $('.table-search').dataTable({
                      "bScrollInfinite": true,
                      "bScrollCollapse": true,
                      "sScrollY": "600px"
              });
              });
            </script>                             
        {% endblock %}
    </body>
</html>
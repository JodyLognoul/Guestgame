{% extends "ggSiteBundle::layout.html.twig" %}
{% block title %}{{ parent() }} - SiteBundle{% endblock %}

{% block body %}
<h1>Site list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Date_create</th>
            <th>Date_modif</th>
            <th>Version</th>
            <th>Url</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('site_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{{ entity.datecreate|date('Y-m-d H:i:s') }}</td>
            <td>{{ entity.datemodif|date('Y-m-d H:i:s') }}</td>
            <td>{{ entity.version }}</td>
            <td>{{ entity.url }}</td>
            <td>{{ entity.description }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('site_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('site_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('site_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}   


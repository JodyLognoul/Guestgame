{% extends "ggDiscussionBundle::layout.html.twig" %}

{% block body %}
<h4>Discussion edit</h4>
<br />
<form action="{{ path('discussion_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('discussion') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('discussion_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock body %}